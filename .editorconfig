# Documentation: https://spec.editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.bat,*.cmd}]
end_of_line = crlf

[{*.ebuild,*.eclass}]
indent_size = 4
indent_style = tab
tab_width = 4

[{*.html,*.js,*.json,*.ts,*.xml,*.yaml,*.yml}]
indent_size = 2
indent_style = space
tab_width = 2

[{*.mk,Makefile,Makefile.*}]
indent_size = 4
indent_style = tab
tab_width = 4

[{*.ps1,*.psd1,*.psm1}]
indent_size = 4
indent_style = space
tab_width = 4

[*.pl]
indent_size = 4
indent_style = space
tab_width = 4

[*.py]
indent_size = 4
indent_style = space
tab_width = 4

[.gitmodules]
indent_style = tab
